rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isThreadMember(threadId) {
      return isSignedIn() &&
        request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.members;
    }

    match /threads/{threadId} {
      // Only thread members can read thread metadata.
      allow read: if isThreadMember(threadId);
      // Allow create when the authenticated user is one of the provided members.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.members;
      // Let members update thread-level metadata like last message preview.
      allow update: if isThreadMember(threadId);

      // Message documents under a thread.
      match /messages/{messageId} {
        // All message reads are limited to thread members.
        allow read: if isThreadMember(threadId);

        // Sender can create messages when they belong to the thread.
        allow create: if isThreadMember(threadId) && request.resource.data.senderId == request.auth.uid;

        // Allow members to add delivery/read receipts but prevent them from modifying other fields.
        allow update: if isThreadMember(threadId)
          && request.resource.data.diff(resource.data).changedKeys().hasOnly(['deliveredTo', 'readBy'])
          && request.resource.data.keys().hasOnly(resource.data.keys().union(['deliveredTo', 'readBy']));
      }
    }
  }
}
